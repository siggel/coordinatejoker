<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <WebView
            android:id="@+id/aboutWebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:text="" />

        <Button
            android:id="@+id/showTermsOfService"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5sp"
            android:onClick="openTermsOfService"
            android:padding="0sp"
            android:text="@string/title_activity_terms_of_service"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/showPrivacyPolicy"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5sp"
            android:onClick="openPrivacyPolicy"
            android:padding="0sp"
            android:text="@string/title_activity_privacy_policy"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/showAcknowledgements"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5sp"
            android:onClick="openAcknowledgements"
            android:padding="0sp"
            android:text="@string/title_activity_acknowledgements"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="UsingOnClickInXml" />

        <Button
            android:id="@+id/showOpenSourceLicenses"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5sp"
            android:onClick="openOpenSourceLicenses"
            android:padding="0sp"
            android:text="@string/title_activity_open_source_licenses"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="UsingOnClickInXml" />

    </LinearLayout>

</ScrollView>

